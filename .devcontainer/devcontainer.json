{
  "name": "HCI L&D API (Ubuntu/Postgres)",
  "image": "ubuntu-gcloud-dev:latest",
  "dockerFile": "../Dockerfile",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode-remote.remote-containers",
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "firsttris.vscode-jest-runner"
  ],
  "forwardPorts": [3000],
  "postCreateCommand": "if [ ! -f nest-cli.json ]; then nest new . --skip-git --package-manager npm; else npm install; fi"
}